<%- include('partials/header') -%>
<h1>Home</h1>
<p><%= content %> </p>
<% if (blog.length !== 0){ %>
<% blog.forEach( (element)=> { %>
    <h1><%= element.title %></h1>
    <p>
        <% if (element.post) {%>
            <%= element.post.slice(0,100) + " ..." %>
        <% } %>
        <a href="posts/<%= element._id%>">Read more</a>
    </p>
<% }) %>
<% } %>
<%- include('partials/footer') -%>